@model IEnumerable<GymBookingSystem.Models.GymClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="GymClasses" asp-action="Create">Create New</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="GymClasses" asp-action="MyClasses">My Classes</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="GymClasses" asp-action="MyHistory">My History</a>
    </li>
</ul>

@if (TempData["BookedStatus"] != null)
{
    <div class="index-options text-center text-success" @*id="threeSeconds"*@>
        <H1>@TempData["BookedStatus"].ToString()</H1>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-action="BookingToggle" asp-route-id="@item.Id">BookToggle</a>

                        @if (TempData["Toggle"] != null)
                        {
                            <a asp-action="BookingToggle" asp-route-id="@item.Id">Book</a>
                        }
                        else
                        {
                            <a asp-action="BookingToggle" asp-route-id="@item.Id">UnBook</a>
                        }

                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a><span>|</span>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> <span>|</span>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                        </td>
                    }

                }

            </tr>
        }
    </tbody>
</table>
